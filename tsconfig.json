{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2020"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "*": ["./src/*"],
    },
    "typeRoots": ["src/typings.d.ts", "node_modules/@types"]
  },
  "include": [
    "src",
    "./node_modules/@types"
  ],
  "exclude": [
    "**/*.js"
  ]
}
